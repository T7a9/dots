# scripting addition
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# mouse support
yabai -m config mouse_modifier cmd 
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
# gaps
yabai -m config window_gap 20
# default layout 
yabai -m config layout bsp
yabai -m config left_padding   20
yabai -m config right_padding  20
yabai -m config external_bar all:23:35
# stupid macos feature
yabai -m config window_shadow off
# autotiling
yabai -m config auto_balance on
# focus follows mouse
yabai -m config focus_follows_mouse autofocus
# macos menubar - gone completely
yabai -m config menubar_opacity 0.3
# insert preview color
yabai -m config insert_feedback_color 0x99eb6f92
# animations
yabai -m config window_animation_duration 0.15
yabai -m config window_animation_easing ease_in_out_cubic

yabai -m config active_window_opacity 0.4

# said apps ignore tiling 
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^ProtonVPN" manage=off
yabai -m rule --add app="^Find My" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add app="^GIMP" manage=off
yabai -m rule --add app="^Transmission" manage=off
yabai -m rule --add app="^Preview$" manage=off
# borders (w/ jankyborders)
borders &
